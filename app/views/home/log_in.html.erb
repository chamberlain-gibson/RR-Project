<% provide(:title, "Log In")%>
<!DOCTYPE html>
  <div class="max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
                <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
                    <h1 class="mb-8 text-3xl text-center md-offset-3">Log In</h1>
                    <%= form_with(model: @user) do |f| %>
                    <%= f.label :name %>
                    <%= f.text_field :name %>
                    <%= f.label :email %>
                    <%= f.text_field :email%>
                    <%= f.submit "Log In", class: "inline-flex items-center 
                      justify-center px-5 py-3 border border-transparent font-medium rounded-md 
                      text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2
                      focus:ring-gray-500"%>
                    <%end%>
                </div>

                <div class="text-grey-dark mt-6">
                    Don't have an account?
                  <%= link_to "Sign Up", signup_path, class:
                            "hover:underline py-2 rounded-md
                            text-md font-medium"%>
                </div>
</div>